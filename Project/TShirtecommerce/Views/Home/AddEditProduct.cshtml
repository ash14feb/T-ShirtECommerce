<div class="modal fade" id="AddEditProdModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div id="prodform" class="needs-validation" data-toggle="validator">
                <div class="modal-header">
                    <h5 class="modal-title" id="modaltitle">Add New TShirt</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3 d-inline-flex  align-items-center">
                        <label for="message-text" class="col-form-label" style="min-width: 100px !important"> Size</label>
                        <select class="form-select" placeholder="Enter size of T-shirt" id="drpSize" aria-label="Default select example" required>
                            <option value="" selected disabled>Select a Size</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                            <option value="XXL">XXL</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="form-group has-validation  d-inline-flex  align-items-center">
                            <label for="recipient-name" class="col-form-label">Price:</label>
                            <input type="number" class="form-control" placeholder="Enter Price of T-shirt" id="txtprice" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group  d-inline-flex  align-items-center">
                            <label for="recipient-name" class="col-form-label">Colour:</label>
                            <input type="text" class="form-control" placeholder="Enter Colour of T-shirt" id="txtcolour">
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group  d-inline-flex  align-items-center">
                            <label for="recipient-name" class="col-form-label">Made:</label>
                            <input type="text" class="form-control" placeholder="Enter Country where made" id="txtmade">
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group  d-inline-flex  align-items-center">
                            <label for="message-text" class="col-form-label"> Style:</label>
                            <select class="form-select" placeholder="Select a style" id="drpstyle" aria-label="Default select example" >
                                <option value="" selected disabled>Select a style</option>
                                <option value="Round Neck">Round Neck</option>
                                <option value="Full Neck">Full Neck</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group  d-inline-flex  align-items-center">
                            <label for="message-text" class="col-form-label"> Gender:</label>
                            <div class="btn-group" id="radiogender" role="group" aria-label="Basic radio toggle button group">
                                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                    <input type="radio" class="btn-check" value="1" name="btnradio" id="btnradio1" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btnradio1">Male</label>
                                    <input type="radio" class="btn-check" value="2" name="btnradio" id="btnradio2" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btnradio2">Female</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group  d-inline-flex  align-items-center">
                            <label for="message-text" class="col-form-label"> Image:</label>
                            <div class="input-group" style="width:400px">
                                <input type="file" class="form-control" accept=".jpg,.png" onchange="loadFile(event)" id="prodimage" aria-describedby="inputGroupFileAddon04" aria-label="Upload" required>

                            </div>
                            <div>
                                <img src="" id="imgpreview" width="100" height="100" style="display:none;" />
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group  d-inline-flex  align-items-center">
                            <label for="recipient-name" class="col-form-label">Description:</label>
                            <input type="text" class="form-control" placeholder="Enter Description" id="txtdescription">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel </button>
                    <button id="btnAddUpdate" class="btn btn-primary" onclick="SaveProduct(); return false;">Add</button>
                    <input type="hidden" id="hdnEditId" name="custId" value="0">
                </div>
            </div>
        </div>
    </div>
</div>